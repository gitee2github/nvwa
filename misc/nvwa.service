[Unit]
Description=NVWA server
After=network-online.target nvwa-pre.service
Requires=network-online.target nvwa-pre.service

[Service]
ExecStart=/usr/bin/nvwa -server 1
ExecStop=/usr/bin/nvwa exit
User=root
Group=root
KillMode=process
Restart=on-failure
Type=notify

[Install]
WantedBy=multi-user.target
Alias=nvwa.service
